                          "type, tuner_label, drive_train, %{name}, odometer, ride_count, paint_color, grim_car_id, pp, favorite, "
                          "slot_id, carparameterB, carparameterC, invalid FROM t_garage ";

                if (where != "")
                    sql += "%s ".format(where);

                sql += order_by;
                sqlite.executeQueryBegin(sql, params);

