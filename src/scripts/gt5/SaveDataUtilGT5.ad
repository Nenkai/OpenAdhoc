    function serializeGPList(gp_list)
    {
        var num = gp_list.size;
        var st = STStructure();
        st.define("num", STInt());
        st.define("buf", STObject(ByteData));

        var obj = st();
        obj.num = gp_list.size;
        obj.buf = gp_list.serialize();
        var buf = obj.serialize();
        return buf;
    }

