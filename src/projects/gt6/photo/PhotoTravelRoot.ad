                if (sPrevMode == 5)
                    WalkMode::ButtonHelp::Pane::ScalarInterpolator.start();
                else
                    WalkMode::ButtonHelp::Pane::ScalarInterpolator.restart();

                WalkMode::ButtonHelp::Pane::Buttons::SELECT.visible = !sIsRacePhoto;
