    method get_car_power(cp, no_update = false)
    {
        if (!no_update)
            cp.updateScratch();
        var power = cp.getPowerScratch();
        var result = main::pdiext::MUnit::GetPowerForDisplay(power.toFloat() * 0.1);
        return result;
