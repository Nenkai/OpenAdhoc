        method onKeyPress(context, event)
        {
            if (event.keysym == CELL_PAD_CTRL_L3_RIGHT)
            {
                self.focus_widget_ = DLCRoot.getFocusWidget()
            }

            return EVENTRESULT_CONTINUE;
