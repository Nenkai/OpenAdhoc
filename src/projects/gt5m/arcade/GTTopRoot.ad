    static sPattern;

    function check_pattern(context, event)
    {
        var success = false;

        if (sPCount < sPattern.size)
        {
            if (event.keysym == sPattern[sPCount])
            {
                sPCount++;
            }
            else
            {
                sPCount = 0;
            }
            if (sPattern.size <= sPCount)
            {
                main::sound.play("return");

                sPCount = 0;
                success = true;
            }
        }

        return success;
    }
