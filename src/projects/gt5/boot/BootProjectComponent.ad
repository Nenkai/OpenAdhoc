module BootProjectComponent::Tooltip::HDToolTip
{
    method onRealize(manager)
    {
        if (main::pdiext::MSystemConfiguration::isSDTV())
        {
                self.tip.scale_x = 3.5;
                self.tip.scale_y = 3.5;
        }
    }
}

