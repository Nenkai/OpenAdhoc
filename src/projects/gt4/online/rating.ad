module Rating
{
	static share_table = [
		nil,
		nil,
		[100, 0],
		[100, 0, 0],
		[80, 20, 0, 0],
		[80, 20, 0, 0, 0],
		[70, 20, 10, 0, 0, 0],
	];
	
	function getBet(player_point, players_num)
	{
		return player_point * 1 / 100;
	}
	
	function getPrize(rank, total_bet, players_num)
	{
		if (players_num < 2 || players_num >= share_table.size)
			return 0;
	
		return total_bet * share_table[players_num][rank] / 100;
	}
}