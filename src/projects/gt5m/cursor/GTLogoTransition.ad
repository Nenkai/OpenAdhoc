









module GTLogoTransition
{
    method onPageOutStart(context)
    {
        LOGOSb.opacity = 0.0;
        LOGOSf.opacity = 0.0;
        mask.visible = false;
    }

    method onPageOutEnd(context)
    {
        mask.visible = true;
        LOGOSb.pageOut.restart();
        LOGOSf.pageOut.restart();
    }

    method onPageInStart(context)
    {
        LOGOSb.pageIn.restart();
        LOGOSf.pageIn.restart();
        context.sync(0.5);
        mask.visible = false;
    }
}