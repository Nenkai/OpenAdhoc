            method getCarList2(where, params, order_by, cp_only = false)
            {
                var name = (main::pdiext::MProductInformation::GetGameRegionCode() == "jp" && main::pdistd::MLocale::getLanguage()) == "JP" ? "name_jp" : "name_en";

                var sqlite = GlobalStatus::getSqlite();
