













module CursorRoot
{
    function onRealize(context)
    {
        if (main::pdiext::MSystemConfiguration::isSDTV())
        {
            Cursor.w *= 1.25f;
            Cursor.h *= 1.25f;
        }
    }

    function setIcon(context, name)
    {
        var cursor = Cursor;
        if (name == "wait")
            cursor = CursorWait;
        context.setCursorWidget(cursor);
    }
}